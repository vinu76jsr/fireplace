[data-page-type=nag] #site-footer {
    display: none;
}

.nag-screen {
    text-align: center;

    > * {
        margin-bottom: 20px;
    }
}

/* For Firefox for Android. */
button:not([disabled]):active,
input:not([disabled]):active,
select:not([disabled]):active,
textarea:not([disabled]):active,
option:active,
label:active,
a:active {
    background: transparent;
}
